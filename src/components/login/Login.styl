
$width=100%
$height=100%
$white-color=#fff
.login_background
    position absolute
    z-index -1
    width $width
    height $height
    background url('../../assets/images/orange_login.jpg') no-repeat
    background-size 100% 100%
.login-page
    width $width
    height $height
    display flex
    // justify-content: center
    z-index 1
    position absolute
    flex-direction row-reverse
    padding 0px 5% 0 0
    /* position absolute
    margin-top -(@height/2)
    top 50% */
    // background black
    .login-form
        width 24%
        align-self center
        border 1px solid rgba(7,17,27,0.2)
        background #072642b2
        // opacity 0.7
        padding 4% 2%
        h3
            color $white-color
            border-bottom 1px solid #f0f0f0
            padding 0 0 10px
            font-size 24px
            margin 0 0 20px
        >>>label
            color $white-color
        label
            color $white-color
        .form-item           
            label
                color $white-color !important
                font-size: 30px
        button
            width $width
            margin 20px 0
            &:hover
                font-size 18px